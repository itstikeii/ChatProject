<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_fragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_update_avt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profileavt"
        android:layout_marginTop="-150dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/profile_update_name"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/square3_bg"
        android:hint="Tên hiển thị"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/profile_update_phone"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/square3_bg"
        android:hint="Số điện thoại"
        android:enabled="false"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_update_save"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/square3_bg"
        android:text="Lưu thay đổi"
        android:layout_marginTop="180dp"
        android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/profile_update_prBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:indeterminateTint="@color/black"
            android:layout_gravity="center"/>
    <ImageButton
        android:id="@+id/profile_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:background="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Xóa tài khoản"
        android:layout_marginLeft="18dp"
        />

    <ImageButton
        android:id="@+id/profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logout"
        android:background="@null"
        android:padding="10dp"
        android:layout_marginLeft="300dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="300dp"

        />

</FrameLayout>